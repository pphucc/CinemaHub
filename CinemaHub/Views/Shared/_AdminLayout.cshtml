<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600&family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" />
    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet" asp-append-version="true">
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a asp-controller="Dashboard" asp-area="Admin" asp-action="Dashboard" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary">CinemaHub</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="~/images/avatar/DefaultAvatar.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Admin_Byte</h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div  class="navbar-nav w-100">
                    <a id="dashboard" asp-area="Admin" asp-controller="Dashboard" asp-action="Dashboard" class="nav-item nav-link "><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <a id="user" asp-area="Admin" asp-controller="Dashboard" asp-action="UserAccount" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Users</a>
                    <a id="manager" asp-area="Admin" asp-controller="Dashboard" asp-action="ManagerAccount" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Managers</a>
                    <a id="back" asp-area="Customer" asp-controller="Home" asp-action="Index" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Back to Home</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->      
        <div class="container-fluid">
            <partial name="_Notification" />
            @RenderBody()
        </div>
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/easing/easing.min.js"></script>
<script src="~/lib/waypoints/waypoints.min.js"></script>
<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
@*<script src="~/lib/lightbox/js/lightbox.min.js"></script>*@
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.tiny.cloud/1/ducankyqmyft90amgwny0kxjmlvoq6q04s0s4sgfzxyrc6o5/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/chart/chart.min.js"></script>
<script src="~/lib/tempusdominus/js/moment.min.js"></script>
<script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
<script type="text/javascript" src="~/js/admindashboard.js"></script>
<script type="text/javascript" src="~/js/signalr.js"></script>
<script type="text/javascript" src="~/js/onlineuser.js"></script>
@await RenderSectionAsync("Scripts", required: false)
<script type="text/javascript">
    $(document).ready(function () {
        var currentUrl = window.location.pathname;
        if (currentUrl === '/Admin/Dashboard/Dashboard') {
            $("#dashboard").addClass("active");
        } 
        if (currentUrl === '/Admin/Dashboard/UserAccount') {
            $("#user").addClass("active");
        }
        if (currentUrl === '/Admin/Dashboard/ManagerAccount') {
            $("#manager").addClass("active");
        }
    })
</script>
</html>
