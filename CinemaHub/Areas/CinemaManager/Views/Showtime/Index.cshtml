@model IEnumerable<Showtime>
<div class="container my-5">
    <h3 class="text-dark">Manage Showtime</h3>
    <hr />
    <div class="d-flex w-100 my-5 justify-content-end">
        <a class="btn btn-dark mx-2" asp-controller="Showtime" asp-action="Create">
            <i class="bi bi-plus-circle"></i>
            Add new Showtime
        </a>
    </div>

    <table id="showtimeTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Hour </th>
                <th>Minute</th>
                <th>Movie</th>
                <th>Duration</th>
                <th>Cinema</th>
                <th>Room</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <div class="d-flex w-100 my-5 justify-content-start error-actions">
        <a class="btn btn-warning mx-2" asp-area="Customer" asp-controller="Home" asp-action="Index">
            <i class="bi bi-house"></i> Back to Home
        </a>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/js/showtime.js"></script>

}


