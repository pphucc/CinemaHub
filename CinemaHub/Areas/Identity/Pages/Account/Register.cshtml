@page
@model RegisterModel
<div class="container">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.3/components/logins/login-4/assets/css/login-4.css">
    <style>
        body {
            background-color: #7a7878; /* Chọn một màu nền tối hơn tại đây */
        }

        .border-black-subtle {
            border-color: #7a7878; /* Màu đen */
        }

    </style>
    <div class="container my-5 mt-5" style="min-height:640px">
        <div class="login-container">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-6 d-flex">
                        <img src="~/img/registerImage.jpg" class="img-fluid rounded-start rounded" alt="...">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body mx-4" style="margin-top: 10%; padding-right: 12%; ">
                            <h2 class="mt-1">Sign up</h2>
                            <form class="row g-3" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="col-md-6">
                                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                    <input asp-for="Input.FirstName" type="text" class="form-control" required>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.LastName" for="inputAddress" class="form-label">Last Name</label>
                                    <input asp-for="Input.LastName" type="text" class="form-control" required>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" required>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="Input.PhoneNumber" type="text" class="form-control" id="inputAddress" required>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <input asp-for="Input.Password" class="form-control" id="password" autocomplete="new-password" aria-required="true" required>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" id="confirm_password" autocomplete="new-password" aria-required="true" required>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Input.DOB" class="form-label">Date of Birth</label>
                                    <input asp-for="Input.DOB" type="date" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Input.Address" class="form-label">Address</label>
                                    <input asp-for="Input.Address" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Input.Avatar" class="form-label">Avatar</label>
                                    <input asp-for="Input.Avatar" type="file" class="form-control" id="inputAvatar">
                                </div>
                                <div class="d-flex justify-content-start col-12">
                                    <div class="mt-3">
                                        <button type="submit" class="btn bsb-btn-l btn-dark">Register</button>
                                    </div>

                                </div>
                            </form>
                            <div class="mt-5 fs-5" style="display: flex;">
                                <p class="text-secondary">Already have an account? </p>
                                <a href="login" class="mx-2" style="text-decoration: underline; color:#000">Sign in</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
